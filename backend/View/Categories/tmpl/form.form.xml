<?xml version="1.0" encoding="utf-8"?>

<form>
    <fieldset
            name="basic_configuration"
            label="COM_EMPRESAS_CATEGORY_BASIC_TITLE"
            class="span6"
            >

        <field
            name="titulo"
            type="Text"
            label="COM_EMPRESAS_CATEGORY_FIELD_TITULO"
            hint="COM_EMPRESAS_CATEGORY_FIELD_TITULO"
            class="input-xlarge"
            required="true"
            />

		<field
            name="publish_up"
            type="Calendar"
            label="COM_EMPRESAS_PUBLISH_UP"
            hint="COM_EMPRESAS_PUBLISH_UP"
            required="false"
			default="NOW"
			format="%d-%m-%Y"
            />

        <field
            name="publish_down"
            type="Calendar"
            label="COM_EMPRESAS_PUBLISH_DOWN"
            hint="COM_EMPRESAS_PUBLISH_DOWN"
            required="false"
			format="%d-%m-%Y"
		/>		
    </fieldset>
</form>